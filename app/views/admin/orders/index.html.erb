<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h2 class="font-bold">FulFilled</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="inline-block py-2 min-w-full">
        <div class="over-flow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white text-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Order ID
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Customer Email
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Total
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Address
              </th>
            </tr>
            </thead>
            <tbody>
            <% @fulfilled_orders.each do |order| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to order.id, admin_order_path(order) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to order.customer_emaiL, edit_admin_order_path(order) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                  <%= order.total %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                  <%= order.address %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  <h2 class="font-bold">Not FulFilled</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="inline-block py-2 min-w-full">
        <div class="over-flow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white text-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Order ID
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Customer Email
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Total
              </th>
              <th scope="col" class="text-sm font-medium py-4 px-6 bg-gray-800 text-left">
                Address
              </th>
            </tr>
            </thead>
            <tbody>
            <% @not_fulfilled_orders.each do |order| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to order.id, admin_order_path(order) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to order.customer_emaiL, edit_admin_order_path(order) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                  <%= order.total %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                  <%= order.address %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
